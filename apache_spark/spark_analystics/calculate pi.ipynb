    "from pyspark import SparkContext\n",
    "import random as rnd\n",
    "\n",
    "sc = SparkContext()\n",
    "SAMPLES = 1000000\n",
    "\n",
    "def inside(p):     \n",
    "  x, y = rnd.random(), rnd.random()\n",
    "  return x*x + y*y < 1\n",
    "\n",
    "count = sc.parallelize(range(0, SAMPLES)).filter(inside).count()\n",
    "pi = 4 * count / SAMPLES\n",
    "\n",
    "print(pi)"
   ]
